<div class="contain mx-auto mt-5 shadow p-5 mb-5 bg-body bg-light rounded">
  <h2>Account Login</h2>
  <form action="/login" method="post">
    <div class="form-floating mt-4 mb-3">
      <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" name="email" value="{{email}}">
      <label for="floatingInput">Email address</label>
    </div>
    <div class="form-floating">
      <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="password" value="{{password}}">
      <label for="floatingPassword">Password</label>
    </div>
    <div class="d-flex justify-content-evenly mt-4">
      <button type="submit" class="btn btn-primary mt-3">Sign in</button>
      <button type="reset" class="btn btn-outline-primary mt-3">Cancel</button>
    </div>
  </form>

  {{#if user}}
  <p id="access-denied">
    Access Denied.<br>
    Invalid Email or Incorrect Password.
  </p>
  {{/if}}
</div>